{
  "name": "nossocrm",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "vitest related --run"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:stagehand": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/journeys/sales-journey.ts",
    "test:stagehand:all": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/run-all.ts",
    "test:stagehand:sales": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/journeys/01-sales-flow.ts",
    "test:stagehand:contacts": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/journeys/02-contacts-crud.ts",
    "test:stagehand:pipeline": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/journeys/03-pipeline-kanban.ts",
    "test:stagehand:ai": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/journeys/04-ai-assistant.ts",
    "test:stagehand:activities": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/journeys/05-activities.ts",
    "test:stagehand:full": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/journeys/06-full-seller-day.ts",
    "test:mystery-shopper": "npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/mystery-shopper.ts",
    "test:mystery-shopper:headless": "HEADLESS=true npx dotenv-cli -e .env.test -- npx tsx e2e/stagehand/mystery-shopper.ts",
    "validate:setup": "node scripts/validate-setup.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.0-beta.66",
    "@ai-sdk/google": "^3.0.0-beta.62",
    "@ai-sdk/openai": "^3.0.0-beta.74",
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.86.0",
    "@tanstack/react-query": "^5.90.11",
    "ai": "^6.0.0-beta.124",
    "clsx": "^2.1.1",
    "immer": "^11.0.1",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.67.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^2.15.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.13",
    "zod": "^4.1.13"
  }
}
